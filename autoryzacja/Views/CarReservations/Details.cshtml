@model autoryzacja.Models.CarReservation

@{
    ViewData["Title"] = "Details";

    var carNames = new Dictionary<int, string>
    {
        { 1, "Audi A4" },
        { 2, "BMW 3" },
        { 3, "Mercedes-Benz C-Class" }
        // Dodaj więcej par ID-nazwa samochodu
    };
}

<h1>Szczegóły</h1>

<div>
    <h4>Rezerwacja Samochodu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CarId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CarId) - @carNames[Model.CarId]
            </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PickupDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PickupDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edycja</a> |
    <a asp-action="Index">Powrót</a>
</div>
